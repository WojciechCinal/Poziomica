<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoziomoActivity">

    <ImageView
        android:id="@+id/skala"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/skala" />

    <ImageView
        android:id="@+id/kolo_pomiarowe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/skala"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:src="@drawable/kropla" />


    <TextView
        android:id="@+id/kwadrat_pomiarowy"
        android:layout_width="475dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="445dp"
        android:layout_marginBottom="4dp"
        android:text="Brak danych pomiarowych"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:text="Brak danych o płaszczyźnie"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>